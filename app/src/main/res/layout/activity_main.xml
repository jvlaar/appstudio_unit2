<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v7.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="469dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button0_0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="tileClicked"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/button0_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="tileClicked"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/button0_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="tileClicked"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/button1_0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="tileClicked"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/button1_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="tileClicked"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/button1_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="tileClicked"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/button2_0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="tileClicked"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/button2_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="tileClicked"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/button2_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="tileClicked"
            app:layout_column="2"
            app:layout_row="2" />

    </android.support.v7.widget.GridLayout>

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="resetClicked"
        android:text="Reset" />

</LinearLayout>